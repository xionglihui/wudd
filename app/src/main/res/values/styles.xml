<resources>



    <style name="style_login_edittext" parent="@style/common_edittext_textcolor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_common_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_normal_text</item>
        <item name="android:textColorHint">@color/black_small_text</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:paddingLeft">13dp</item>
    </style>

    <style name="style_login_ll_show" parent="@style/style_fill_wrap">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_login_edittext_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/item_common_height</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="style_more_main_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_big_text</item>
    </style>


    <style name="style_more_item_left_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_big_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 我的账户右边的text -->
    <style name="style_more_item_right_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/black_big_text</item>
        <item name="android:textSize">14sp</item>
    </style>




</resources>
