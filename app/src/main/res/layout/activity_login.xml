<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/login_activity_input_mobile"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13711111111"
            android:textColor="@color/black_normal_text"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_activity_input_pwd"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_normal_text"
            android:text="1111qqqq"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_login_commint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        android:background="@color/base_theme_color"
        android:text="@string/login_btn_login"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
